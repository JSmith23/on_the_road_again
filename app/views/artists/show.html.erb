<div class="container-fluid">
  <% if @current_artist.band_name %>
  <div class="row">
    <h1 class="band-name col-lg"> <%= @current_artist.band_name %> </h1>
  </div>
<% else  %>
<%= link_to "Add New Band Details!", edit_artist_path(@current_artist.id), :class => "btn btn-info btn-lg"  %>
<% end  %>

  <%= link_to "Add New Tour", new_tour_path, :class => "btn btn-info btn-lg"  %>

  <div class="row">
    <div class="tours col-lg">
      <h2>Past Tours</h2>
      <%  @past_tours.each do |tour| %>
      <div class="p-tours">
        <%= link_to "#{tour.name}", tour_path(tour.id), :class => "btn btn-info btn-lg btn-block"  %>
        <h3>Tour Info</h3>
      </div>
      <% end %>
    </div>

    <div class="tours col-lg">
      <h2>Future Tours</h2>
      <% @future_tours.each do |tour| %>
      <div class="f-tours">
        <%= link_to "#{tour.name}", tour_path(tour.id), :class => "btn btn-info btn-lg btn-block"  %>
        <h3>Tour Info</h3>
        <p class = "btn btn-outline-info btn-sm"><%= link_to "Delete Tour", {:controller => :tours, :action => 'destroy', :id => tour.id },
          :method => :delete %></p>
        <br>
      </div>
      <% end  %>
    </div>


    <div class="tours col-lg">
      <h2>Past Tours</h2>
      <%  @past_tours.each do |tour| %>
      <div class="p-tours">
        <%= link_to "#{tour.name}", tour_path(tour.id), :class => "btn btn-info btn-lg"  %> <br>
        <p class = "btn btn-outline-info btn-sm"><%= link_to "Delete Tour", {:controller => :tours, :action => 'destroy', :id => tour.id },
          :method => :delete %></p>
        <br>
      </div>
      <% end %>
    </div>
  </div>
</div>
